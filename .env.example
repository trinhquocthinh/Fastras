# ============================================
# API Configuration
# ============================================

# Current API URL (switches between mock and real)
# Options:
#   - /api (uses Next.js API routes - mock API)
#   - https://api.fastras.com (real production API)
NEXT_PUBLIC_API_URL=/api

# Real API URL (when ready to switch)
NEXT_PUBLIC_REAL_API_URL=https://api.fastras.com

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://trinhquocthinh.github.io/fastras
NEXT_PUBLIC_BASE_PATH=/fastras

# ============================================
# Authentication
# ============================================

# JWT Secret (REQUIRED in production - use strong random string!)
JWT_SECRET=your-secret-key-change-in-production-use-a-random-string

# ============================================
# Feature Flags (Optional)
# ============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_2FA=false

# ============================================
# Development (Optional)
# ============================================

# Enable debug logging
NEXT_PUBLIC_DEBUG_MODE=false
